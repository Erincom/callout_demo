<h1>Edit your post</h1>
<%= simple_form_for @post do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :category %>
  <%= f.input :city %>
  <%= f.input :neighbourhood, collection: ApplicationRecord::NEIGHBOURHOODS %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.button :submit %>
<% end %>
