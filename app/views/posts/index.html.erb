<div class="container-issues">
  <h1 style="margin-left: 80px">Search<span class="green-period">.</span></h1>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= render 'filter' %>
    </div>
  </div>

  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-xs-12 col-md-4">
      <div class="issue-card-search">
        <div class="issue-card-neighbourhood">
          <%= post.neighbourhood %>
        </div>
        <div class="issue-card-upvote">
          <%= post.get_upvotes.size %>
          <%= link_to "^", like_post_path(post), method: :put %>
        </div>
        <%= link_to post_path(post) do %>
        <span class="issue-card-text">
          <span class="issue-card-title-search">
            <%= post.title %>
          </span>
          <span class="issue-card-category">
            #<%= post.category %>
          </span>
        </span>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>

