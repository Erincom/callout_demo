<%= form_tag(posts_path, :method => "get", class: 'filter', id: "filter") do %>
<%= select_tag :city, options_for_select(ApplicationRecord::CITIES, selected: params[:city], class: ''), include_blank: true %>
<%= select_tag :neighbourhood, options_for_select(ApplicationRecord::NEIGHBOURHOODS, selected: params[:neighbourhood]), include_blank: true %>
<%= select_tag :category, options_for_select(@list_categories, selected: params[:category]), include_blank: true %>
<%= submit_tag "Go", class: "btn btn-primary" %>
<% end %>
