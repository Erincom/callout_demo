  <div class="banner-background">
  </div>
<div class="banner padded">
  <div class="banner-content padded-sm">
    <h1>Connect with local politicians on issues that matter<span class="green-period">.</span></h1>
  </div>

    <%= render 'shared/search' %>

</div>

<div class="container most-voted">
  <h3 style = "font-size:34px; margin-top:100px;">Most popular issues<span class="green-period">.</span></h3>
  <div class="row padded-sm">
    <% @upvoted_posts.each do |popular_post| %>
    <div class="col-xs-12 col-md-4">
      <div class="issue-card bg-white">
        <div class="issue-card-neighbourhood">
          <%= popular_post.neighbourhood %>
        </div>
        <div class="issue-card-upvote">
          <%= popular_post.get_upvotes.size %>
          <%= link_to "^", like_post_path(popular_post), method: :put %>
        </div>
        <%= link_to post_path(popular_post) do %>


          <div class="issue-card-title">
            <%= popular_post.title %>
          </div>
          <div class="issue-card-category">
            #<%= popular_post.category %>
          </div>

        <% end %>
      </div>
     </div>
    <% end %>
  </div>
</div>
