
<%= form_tag(posts_path, :method => "get", class: 'inline-form', id: "search") do %>

<%= select_tag :city, options_for_select(ApplicationRecord::CITIES, selected: params[:city], class: ''), include_blank: true, :prompt => "City" %>
<%= select_tag :neighbourhood, options_for_select(ApplicationRecord::NEIGHBOURHOODS, selected: params[:neighbourhood], class: ''), include_blank: true, :prompt => "Neighbourhood" %>
<%= submit_tag "Search your area", class: "btn btn-primary" %>
<% end %>





