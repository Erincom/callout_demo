<%= form_tag(posts_path, :method => "get", class: 'inline-form', id: "search") do %>
<%= select_tag :city, options_for_select(ApplicationRecord::CITIES, selected: params[:city]), {include_blank: true, class: 'select select_city', prompt: t('.city_prompt')}  %>
<div class="blank-space"></div>
<%= select_tag :neighbourhood, options_for_select(ApplicationRecord::NEIGHBOURHOODS, selected: params[:neighbourhood]), {include_blank: true, class: 'select select_neightbourhood', prompt: t('.neighbourhood_prompt')} %>
<div class="blank-space"></div>
<%= submit_tag t('.button'), class: "btn btn-primary homepage-button" %>
<% end %>


