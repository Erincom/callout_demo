<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

    <!-- Profile picture and dropdown -->
    <!-- Setting the twitter avatar -->
    <% avatar_url = current_user.twitter_picture_url || "http://placehold.it/30x30" %>
    <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
    <li><%= link_to "My Account", edit_user_registration_path %></li>
      <li><a href="#">Dashboard</a></li>
      <li><a href="#">Log Out</a></li>
    </ul>
    <div class="navbar-wagon-item">
      <%= link_to "Create an issue", new_post_path %>
      <i class="fa fa-user"></i>
      <%= link_to "Search issues around me", posts_path %>
      <i class="fa fa-home"></i>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
      <i class="fa fa-sign-out"></i>
    </div>

    <% else %>

    <!-- Login text link -->
    <%= link_to "Sign in", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Sign up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% end %>
  </div>
</div>

